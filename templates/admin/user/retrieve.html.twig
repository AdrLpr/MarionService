{% extends "admin/base.html.twig" %}
{% block sub_title %}Users{% endblock %}
{% block content %}
    <a href="{{path('app_admin_home_home')}}"> Retour au menu Admin </a>
        <div>
            <a href="{{path('app_admin_user_create')}}"> Nouveau User </a> <br>

                {% for user in users %}
                    <p> <img src="{{user.image}}"> {{user.titre}} <a href="{{path('app_admin_user_update', {id: user.id}) }}"> Modifier </a> <a href="{{path('app_admin_user_delete', {id: user.id}) }}"> Supprimer </a> 
                {% endfor %}
        </div>
{% endblock %}